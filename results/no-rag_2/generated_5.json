{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT_ID:role/hr"
      },
      "Action": "dynamodb:GetItem",
      "Resource": "arn:aws:dynamodb:::table/employee-records"
    },
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT_ID:role/finance"
      },
      "Action": "dynamodb:GetItem",
      "Resource": "arn:aws:dynamodb:::table/salary-data"
    },
    {
      "Effect": "Deny",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT_ID:role/hr"
      },
      "Action": "dynamodb:PutItem",
      "Resource": "arn:aws:dynamodb:::table/salary-data"
    }
  ]
}