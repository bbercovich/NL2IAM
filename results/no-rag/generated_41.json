{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::files.mydomain.com/*",
      "Condition": {
        "StringEquals": {
          "aws:Referer": [
            "console.amazonaws.com",
            "www.mydomain.com"
          ]
        }
      }
    }
  ]
}