{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:ListBucketVersions"
      ],
      "Resource": "arn:aws:s3:::singlecomm.recordings",
      "Condition": {
        "StringEquals": {
          "s3:prefix": "0001"
        }
      }
    }
  ]
}