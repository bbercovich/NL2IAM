{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances",
        "ec2:GetConsoleOutput"
      ],
      "Resource": "arn:aws:ec2:*:*:instance/*"
    },
    {
      "Effect": "Allow",
      "Action": "ec2:RunInstances",
      "Resource": "arn:aws:ec2:*:*:instance/*",
      "Condition": {
        "StringLike": {
          "ec2:SubnetId": "subnet-*",
          "ec2:NetworkInterfaceId": "eni-*",
          "ec2:VolumeId": "vol-*",
          "ec2:ImageId": "ami-*",
          "ec2:KeyName": "key-*",
          "ec2:SecurityGroupId": "sg-*"
        }
      }
    }
  ]
}