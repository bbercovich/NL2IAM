{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "iam:CreateUser",
        "iam:DeleteUser"
      ],
      "Condition": {
        "StringNotLike": {
          "aws:username": "*@domain.com"
        }
      },
      "Resource": [
        "*"
      ]
    }
  ]
}